{% extends 'base.html.twig' %}
{% block body %}
    <a class="btn btn-success" href="{{ path('todo_create') }}" >Créer un todo</a>
    <hr>
    <h2 class="page-header">Todos</h2>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>#</th>
            <th>TODO</th>
            <th>Deadline</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for todo in todos %}
        <tr>
            <th scope="row">{{ todo.id }}</th>
            <td>{{ todo.name }}</td>
            <td>{{ todo.dueDate|date('F j, Y , g:i a') }}</td>
            <td>
                <a href="{{ path('todo_details', {'id': todo.id}) }}" class="btn btn-success">Détails</a>
                <a href="{{ path('todo_edit', {'id': todo.id}) }}" class="btn btn-default">Editer</a>
                <a href="{{ path('todo_delete', {'id': todo.id}) }}" class="btn btn-danger">Supprimer</a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
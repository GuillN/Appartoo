{% extends 'base.html.twig' %}
{% block body %}
    <a class="btn btn-default" href="/todo" >Retour aux todos</a>
    <hr>
    <h2 class="page-header">{{ todo.name }}</h2>
    <ul class="list-group">
        <li class="list-group-item">Catégorie: {{ todo.category }}</li>
        <li class="list-group-item">Priorité: {{ todo.priority }}</li>
        <li class="list-group-item">Deadline: {{ todo.dueDate | date('F j, Y , g:i a') }}</li>
    </ul>
    <p>{{ todo.description }}</p>
{% endblock %}